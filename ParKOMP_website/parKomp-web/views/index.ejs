<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-VYQCFVYRBR"></script>
    <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-VYQCFVYRBR');
    </script>

    <meta charset="utf-8">
    <meta name="viewport" content="initial-scale=1.0,maximum-scale=1.0,user-scalable=no,width=device-width">
    <title>ParKOMP - Parking of the future</title>
    <link rel='icon' type='image/png' href='/pics/favicon.png'>
    <link type="text/css" rel="stylesheet" href="/css/ball.css">
    <link type="text/css" rel="stylesheet" href="/css/fonts.css">
    <link type="text/css" rel="stylesheet" href="/css/style_index.css">
    <link type="text/css" rel="stylesheet" href="/css/style_index_ext.css">
    <script type="text/javascript" src="/js/sort_tiles.js"></script> 
    <script type="text/javascript" src="/js/cookie.js"></script>   
    <script type="text/javascript" src="/js/part.js"></script>   
    <script type="text/javascript" src="/js/nav.js"></script>  
  </head>
  <body onload="load();makeParts();">
    <!-- header -->
    <div class="header">
      <!-- menu-side image -->
      <img class="menu-side" onclick="openNav();this.blur();" src="/pics/menu.png" alt="Menu_image" height="28" width="28"> 
      <!-- header logo -->
      <img class="logo" src="/pics/parkomp_logo.png" alt="ParKOMP_logo" height="32" width="165">

      <!-- user -->
      <div>
        <!-- logout button -->
        <form action="/logout?_method=DELETE" method="POST">
          <a href="javascript:;" onclick="parentNode.submit();" class="logout">
            <img class="logout_pic" src="/pics/logout.png" alt="logout" height="25" width="25">
          </a>
        </form>
        <!-- username -->
        <h1 class="name"><%= name %></h1>
      </div>
    </div>
    
    <div id="main" style="min-height: 100vh;">
      <div class="top">
        <!-- Stay label -->
        <div class="stay_label">
          <h1><%= l.stays %></h1>
        </div>

        <!-- Sort dropdown -->
        <select id="drpdwn_srt" class="dropdown_sort" onchange="itemSelected();">
          <option disabled selected><%= l.sort %></option>
          <option value="loc"><%= l.locat %></option>
          <option value="date"><%= l.date %></option>
          <option value="car"><%= l.car %></option>
        </select>
      </div>

      <!--In case of no records display tile2 else display records with tile-->
      <% if(items.length == 0){ %>
        <div class="tile2">
          <h1 style="font-size: 15px;text-align: center;vertical-align: middle;line-height: 55px;"><%= l.empty %></h1>
        </div>
      <% }else{ %>  
        <% items.forEach((itm) =>{ %>
          <div class="tile">
            <h1 class="tile_location"><%= itm.p_name %></h1>
            <h1 class="tile_date"><%= itm.date_arr %></h1>
            <div class="tile_line"></div>
            <h1 class="tile_car_name"><%= itm.c_name %></h1>
            <h1 class="tile_time"><%= itm.t_arr %>-<%= itm.t_exit %></h1>
          </div>
      <% })} %>
    </div>

    <!-- cookie banner -->
    <div id="cookie-banner" class="cookie-banner" style="display: none">
      <p style="float:left; margin-left: 15px;margin-bottom: 0px;"><%= l.cookie1 %> <a href='/policy'><%= l.cookie2 %></a>.</p>
      <button class="close" onclick="close_click()">&times;</button>
    </div>
    
    <!-- footer -->
    <div class="footer">
      <!-- footer copyright -->
      <h1 class="footer_text">
        &copy; <%= l.footer %>
      </h1>
    </div>

    <!-- menu side nav -->
    <div id="mySidenav" class="sidenav">
      <a href="javascript:;" class="closebtn" onclick="closeNav()">&times;</a>
      <a href="/"><%= l.m_home %></a>
      <a href="/cars"><%= l.m_cars %></a>
      <a href="#"><%= l.m_about %></a>
      <a href="#"><%= l.m_contact %></a>
    </div>
  </body>
</html>


